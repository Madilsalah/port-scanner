# port_scanner.py
import socket
from datetime import datetime

def scan_ports(target, ports):
    open_ports = []  # List to store open ports
    print(f"Scanning {target}...\n")
    for port in ports:
        try:
            sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
            sock.settimeout(0.5)
            result = sock.connect_ex((target, port))
            if result == 0:
                print(f"[+] Port {port} is open")
                open_ports.append(port)  # Add open port to the list
            sock.close()
        except Exception as e:
            print(f"[-] Error scanning port {port}: {e}")
    print("\nScanning completed!")
    return open_ports

if __name__ == "__main__":
    print("Simple Port Scanner\n")
    target_ip = input("Enter the target IP address: ")
    ports = range(1, 1025)  # Scans the first 1024 ports
    start_time = datetime.now()

    # Scan and get the list of open ports
    open_ports = scan_ports(target_ip, ports)

    end_time = datetime.now()
    print(f"\nTime taken: {end_time - start_time}\n")

    # Display the summary of open ports
    if open_ports:
        print("Summary of Open Ports:")
        for port in open_ports:
            print(f" - Port {port} is open")
    else:
        print("No open ports found.")
